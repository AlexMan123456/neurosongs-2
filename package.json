{
  "name": "neurosongs-2",
  "private": true,
  "description": "Source code for Neurosongs 2",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bash -c 'turbo run build $@' --",
    "dev": "turbo run dev",
    "format": "bash -c 'pnpm run format-package-json && pnpm run format-workspaces $@' --",
    "format-package-json": "eslint --fix --suppress-all \"./**/package.json\" && rm -f eslint-suppressions.json",
    "format-workspaces": "bash -c 'turbo run format $@' --",
    "generate": "bash -c 'turbo run generate $@' --",
    "lint": "bash -c 'pnpm run lint-package-json && pnpm run lint-workspaces $@' --",
    "lint-package-json": "eslint \"./**/package.json\"",
    "lint-workspaces": "bash -c 'turbo run lint $@' --",
    "migrate-deploy": "turbo run migrate-deploy --filter=back-end",
    "prepare": "husky",
    "test": "bash -c 'turbo run test $@' --",
    "update-dependencies": "turbo run update-dependencies && pnpm run update-root-dependencies",
    "update-root-dependencies": "pnpm update --latest && pnpm update",
    "use-live-components": "turbo run use-live-components --filter=front-end --cache=local:,remote:",
    "use-live-eslint-plugin": "pnpm uninstall @alextheman/eslint-plugin && pnpm install --save-dev @alextheman/eslint-plugin",
    "use-local-components": "turbo run use-local-components --filter=front-end --cache=local:,remote:",
    "use-local-eslint-plugin": "dotenv -e .env -- sh -c 'ESLINT_PLUGIN_PATH=${LOCAL_ESLINT_PLUGIN_PATH:-../../../components}; pnpm --prefix \"$ESLINT_PLUGIN_PATH\" run create-local-package && pnpm uninstall @alextheman/eslint-plugin && pnpm install --save-dev \"$ESLINT_PLUGIN_PATH\"/alextheman-eslint-plugin-*.tgz'"
  },
  "dependencies": {
    "@alextheman/utility": "^3.4.1",
    "react-error-boundary": "^6.0.0"
  },
  "devDependencies": {
    "@alextheman/eslint-plugin": "^4.3.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "prisma": ">=6.19.0 <7",
      "@prisma/client": ">=6.19.0 <7",
      "@quramy/prisma-fabbrica": "2.3.2",
      "prisma-zod-generator": "1.32.1"
    }
  }
}
