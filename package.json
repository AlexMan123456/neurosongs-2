{
  "name": "neurosongs-2",
  "private": true,
  "description": "Source code for Neurosongs 2",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean-update": "turbo run clean-update && npm-check-updates -u",
    "dev": "turbo run dev",
    "format": "npm run format-package-json && npm run format-workspaces",
    "format-package-json": "eslint --fix --suppress-all \"./**/package.json\" && rm -f eslint-suppressions.json",
    "format-workspaces": "turbo run format",
    "generate": "turbo run generate",
    "generate-from-back-end": "turbo run generate --filter=back-end",
    "lint": "npm run lint-package-json && npm run lint-workspaces",
    "lint-package-json": "eslint \"./**/package.json\"",
    "lint-workspaces": "turbo run lint",
    "migrate-deploy": "turbo run migrate-deploy --filter=back-end",
    "prepare": "husky",
    "test": "turbo run test",
    "update-dependencies": "turbo run clean-update && npm run update-root-dependencies",
    "update-root-dependencies": "bash -c 'npx npm-check-updates -u \"$@\" && npm install --workspaces' --",
    "use-live-components": "turbo run use-live-components --filter=front-end --cache=local:,remote:",
    "use-live-eslint-plugin": "npm uninstall @alextheman/eslint-plugin && npm install --save-dev @alextheman/eslint-plugin",
    "use-local-components": "turbo run use-local-components --filter=front-end --cache=local:,remote:",
    "use-local-eslint-plugin": "dotenv -e .env -- sh -c 'ESLINT_PLUGIN_PATH=${LOCAL_ESLINT_PLUGIN_PATH:-../../../components}; npm --prefix \"$ESLINT_PLUGIN_PATH\" run create-local-package && npm uninstall @alextheman/eslint-plugin && npm install --save-dev \"$ESLINT_PLUGIN_PATH\"/alextheman-eslint-plugin-*.tgz'"
  },
  "dependencies": {
    "@alextheman/utility": "^2.19.0",
    "react-error-boundary": "^6.0.0"
  },
  "devDependencies": {
    "@alextheman/eslint-plugin": "^3.2.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-package-json": "^0.85.0",
    "husky": "^9.1.7",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "packageManager": "npm@11.6.3",
  "engines": {
    "node": ">=18"
  }
}
