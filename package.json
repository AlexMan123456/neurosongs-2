{
  "name": "neurosongs-2",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "update-dependencies": "npx npm-check-updates -u && npm install && turbo run update-dependencies",
    "generate": "turbo run generate",
    "generate-from-back-end": "turbo run generate --filter=back-end",
    "migrate-deploy": "turbo run migrate-deploy --filter=back-end",
    "prepare": "husky"
  },
  "devDependencies": {
    "@alextheman/eslint-plugin": "^1.8.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.5.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@alextheman/utility": "^1.14.0",
    "@neurosongs/prisma-client": "^1.0.0"
  }
}
