{
  "name": "back-end",
  "version": "1.0.0",
  "description": "Back-end of Neurosongs 2",
  "license": "ISC",
  "author": "alextheman",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "nodemon src/server/index.ts",
    "format": "pnpm run format-prettier && pnpm run format-eslint",
    "format-eslint": "eslint --fix --suppress-all \"src/**/*.ts\" \"tests/**/*.ts\" && rm -f eslint-suppressions.json",
    "format-prettier": "pnpm run format-prettier-typescript && pnpm run format-prettier-javascript",
    "format-prettier-javascript": "prettier --write \"./**/*.js\" \"src/database/fixtures/*.json\"",
    "format-prettier-typescript": "prettier --write --parser typescript \"./**/*.ts\"",
    "generate": "prisma generate && tsx disableTscInDirectory.ts",
    "lint": "pnpm run lint-tsc && pnpm run lint-eslint && pnpm run lint-prettier",
    "lint-eslint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint-prettier": "pnpm run lint-prettier-typescript && pnpm run lint-prettier-javascript",
    "lint-prettier-javascript": "prettier --check \"./**/*.js\" \"src/database/fixtures/*.json\"",
    "lint-prettier-typescript": "prettier --check --parser typescript \"./**/*.ts\"",
    "lint-tsc": "tsc --noEmit",
    "migrate-deploy": "prisma migrate deploy",
    "migrate-dev": "prisma migrate dev",
    "reset-database": "prisma migrate reset --force --skip-generate",
    "seed": "prisma db seed",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test-watch": "vitest",
    "update-dependencies": "pnpm update --latest && pnpm update"
  },
  "dependencies": {
    "@neurosongs/prisma-client": "workspace:*",
    "@neurosongs/types": "workspace:*",
    "@neurosongs/utility": "workspace:*",
    "@prisma/client": "^6.19.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@chax-at/transactional-prisma-testing": "^1.4.2",
    "@prisma/config": "^6.19.1",
    "@quramy/prisma-fabbrica": "2.3.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-serve-static-core": "^5.1.0",
    "@types/supertest": "^6.0.3",
    "execa": "^9.6.1",
    "nodemon": "^3.1.11",
    "prisma": "^6.19.1",
    "prisma-zod-generator": "1.32.1",
    "supertest": "^7.1.4",
    "tsdown": "0.19.0-beta.1",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "prisma": {
    "seed": "tsx src/database/seed.ts"
  }
}
