{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "generate": {
      "outputs": [""]
    },
    "update-dependencies": {
      "dependsOn": ["^update-dependencies"],
      "cache": false
    },
    "clean-update": {
      "dependsOn": ["^clean-update"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "migrate-deploy": {
      "dependsOn": ["^migrate-deploy"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "use-local-components": {
      "dependsOn": ["^use-local-components"]
    },
    "use-live-components": {
      "dependsOn": ["^use-live-components"]
    }
  }
}
